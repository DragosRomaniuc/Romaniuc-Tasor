extends layout

block content

  form.form-signin(method='POST' action='')
    //- Logo
    img.d-block.mx-auto.mb-4(src=baseUrl+'images/tasor3.png' alt='' width='300' height='350')

    //- Title
    h1.h3.mb-3.font-weight-normal.text-center Please Create Account

    //- Validation feedback
    if errors
      ul
        for error in errors
          li!= error.msg

    //- Email
    label.sr-only(for='email') Email address
    input#email.form-control(type='email' name='email' placeholder='Email' required='true' autofocus='' value=(undefined===account ? '' : account.email))

    //- User name
    label.sr-only(for='userName') Name
    input#userName.form-control(type='text' name='userName' placeholder='Name' required='true' autofocus='' value=(undefined===account ? '' : account.userName))

    //- Password
    label.sr-only(for='password') Password
    input#password.form-control(type='password' name='password' placeholder='Password' required='true' value=(undefined===account ? '' : account.password))

    //- Confirm password
    label.sr-only(for='password2') Confirm Password
    input#password2.form-control(type='password' name='password2' placeholder='Confirm Password' required='true' value=(undefined===account ? '' : account.password2))

    //- Sign Up link
    p
      | Already have an account?
      a(href=baseUrl+'login')  Sign In

    //- Submit
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up