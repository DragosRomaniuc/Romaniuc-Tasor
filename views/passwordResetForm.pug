extends layout

block content

  form.form-signin(method='POST' action='')
    //- Logo
    img.d-block.mx-auto.mb-4(src=baseUrl+'images/tasor3.png' alt='' width='300' height='350')

    //- Title
    h1.h3.mb-3.font-weight-normal.text-center Please Change Your Password

    //- Validation feedback
    if errors
      ul
        for error in errors
          li!= error.msg


    //- Password
    label.sr-only(for='password') Password
    input#password.form-control(type='password' name='password' placeholder='Password' required='true')

    //- Confirm password
    label.sr-only(for='password2') Confirm Password
    input#password2.form-control(type='password' name='password2' placeholder='Confirm Password' required='true')

    //- Submit
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit